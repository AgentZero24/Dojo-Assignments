@model Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Products | <a href="/categories">Categories</a></h1>
        <div class="row">
            <div class="left col-6">
                <h2 class="text-center">New Product</h2>
                <form asp-action="CreateProduct" asp-controller="Home" method="POST">
                    <div class="form-group">
                        <label asp-for="Name" class="col-4"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input asp-for="Name" class="form-control col-6">
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="col-4"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <input asp-for="Description" class="form-control col-6">
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="col-4"></label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                        <input asp-for="Price" class="form-control col-6">
                    </div>
                    <div class="button">
                        <input type="submit" class="btn btn-secondary col-2" value="Submit">
                    </div>
                </form>
            </div>
            <div class="right col-6">
                <h2 class="text-center">Existing Products</h2>
                @foreach (Product product in ViewBag.AllProducts)
                {
                    <p><a href="/product/@product.ProductId">@product.Name</a></p>
                }
            </div>
        </div>
    </div>
</body>
</html>
