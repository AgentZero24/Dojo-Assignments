@model Login

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LogIn</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center">LogIn</h1>
        <form asp-action="CreateLogin" asp-controller="Home" method="POST">
            <div class="form-group">
                <label asp-for="Email" class="col-4"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control col-8">
            </div>
            <div class="form-group">
                <label asp-for="Password" class="col-4"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Password" class="form-control col-8">
            </div>
            <div class="button">
                <input type="submit" class="btn btn-secondary" value="Login">
            </div>
        </form>
    </div>
</body>
</html>